<p style="color: green"><%= notice %></p>

<h1>Articles listing page</h1>

<table class="table">
  <thead class="table-primary">
    <tr>
      <th scope="col">ID</th>
      <th scope="col">Title</th>
      <th scope="col">Sub Title</th>
      <th scope="col">Description</th>
      <th scope="col">Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @articles.each do |article| %>
      <tr>
        <th scope="row"><%= article.id %></th>
        <td><%= article.title %></td>
        <td><%= article.sub_title %></td>
        <td><%= article.description %></td>
        <td>
          <div class="d-inline-flex gap-1">
            <%= link_to 'Show', article_path(article), class: 'btn btn-primary' %>
            <%= link_to 'Edit', edit_article_path(article), class: 'btn btn-warning' %>
            <%= button_to 'Destroy', article_path(article), method: :delete, class: 'btn btn-danger' %>
          </div>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to 'New Article', new_article_path, class: 'btn btn-success' %>
